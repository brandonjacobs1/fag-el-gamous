@{
}

@{
    ViewData["Title"] = "Supervised Models";
}


<h1 class="text-center">Supervised Models</h1>


<div class="container-fluid">
    <div class="row">
        <!-- Left Side -->
        <div class="col-md-6 text-center">
            <h3 class="text-center mt-5">Head Direction Prediction</h3>

            <form asp-controller="Model" asp-action="Hd" method="post">
                <div class="form-group row">
                    <label for="depth" class="col-sm-4 col-form-label">Depth</label>
                    <div class="col-sm-8">
                        <input type="text" name="depth" class="form-control" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="southtohead" class="col-sm-4 col-form-label">South to Head</label>
                    <div class="col-sm-8">
                        <input type="text" name="southtohead" class="form-control" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="southtofeet" class="col-sm-4 col-form-label">South to Feet</label>
                    <div class="col-sm-8">
                        <input type="text" name="southtofeet" class="form-control" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="westtohead" class="col-sm-4 col-form-label">West to Head</label>
                    <div class="col-sm-8">
                        <input type="text" name="westtohead" class="form-control" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="westtofeet" class="col-sm-4 col-form-label">West to Feet</label>
                    <div class="col-sm-8">
                        <input type="text" name="westtofeet" class="form-control" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="area" class="col-sm-4 col-form-label">Area</label>
                    <div class="col-sm-8">
                        <input type="text" name="area" class="form-control" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="wrapping" class="col-sm-4 col-form-label">Wrapping</label>
                    <div class="col-sm-8">
                        <input type="text" name="wrapping" class="form-control" required>
                    </div>
                </div>
                <br />

                <button type="submit" class="text-center btn btn-primary">Predict</button>
            </form>
            <br />

            @if (ViewBag.Hd != null)
            {
                <div class="alert alert-primary d-flex align-items-center justify-content-center" role="alert" style="background-color: #d8d9e0;">
                    <h4 class="mb-0">
                        Head Direction: @ViewBag.Hd
                    </h4>
                </div>
            }
        </div>



        <!-- Right Side -->
        <div class="col-md-6 text-center">
            <h3 class="text-center mt-5">Sex Prediction</h3>
            <!-- Form for the first API call -->
            <form asp-controller="Model" asp-action="Sex" method="post" class="mb-5">
                <div class="form-group row">
                    <label for="eastwest" class="col-sm-4 col-form-label">East/West</label>
                    <div class="col-sm-8">
                        <input type="text" name="eastwest" required class="form-control">
                    </div>
                </div>

          <div class="form-group row">
        <label for="depth" class="col-sm-4 col-form-label">Depth</label>
        <div class="col-sm-8">
            <input type="text" name="depth" required class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label for="haircolor" class="col-sm-4 col-form-label">Hair Color</label>
        <div class="col-sm-8">
            <input type="text" name="haircolor" required class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label for="wrapping" class="col-sm-4 col-form-label">Wrapping</label>
        <div class="col-sm-8">
            <input type="text" name="wrapping" required class="form-control">
        </div>
    </div>


    <div class="form-group row">
        <label for="ageatdeath" class="col-sm-4 col-form-label">Age at Death</label>
        <div class="col-sm-8">
            <input type="text" name="ageatdeath" required class="form-control">
        </div>
    </div>

                <div class="form-group row">
                    <label for="samplescollected" class="col-sm-4 col-form-label">Samples Collected</label>
                    <div class="col-sm-8">
                        <div class="form-check">
                            <input type="checkbox" name="samplescollected" class="form-check-input" id="samplescollected">
                            <label class="form-check-label ml-2" for="samplescollected"></label>
                        </div>
                    </div>
                </div>

    <div class="form-group row">
        <div class="col-sm-8 offset-sm-4">
            <button type="submit" class="btn btn-primary">Predict</button>
        </div>
    </div>
</form>

<!-- Display the result of the first API call -->
@if (ViewBag.Sex != null)
{
    <div class="alert alert-primary d-flex align-items-center justify-content-center" role="alert" style="background-color: #d8d9e0;">
        <h4 class="mb-0">
            Sex: @ViewBag.Sex
        </h4>
    </div>
}
<div/>

    </div>
</div>




    