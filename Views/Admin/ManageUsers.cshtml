@model UserRolesView

<div class="text-center">
    <p>Admin Page</p>

    <div class="row">
        @*<div class="col-2">
                    <button class="btn btn-primary">Manage Roles</button>
                <br />
                    <button class="btn btn-primary">Manage Users</button>
            </div>*@
        <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>UserId</td>
                        <td>User</td>
                        <td>Email Confirmed</td>
                        <td>Two-Factor Enabled</td>
                        <td>Actions</td>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var u in Model.ListUsers)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.Email</td>
                            <td>@u.EmailConfirmed</td>
                            <td>@u.TwoFactorEnabled</td>
                            <td>
                                <a asp-action="ConfirmUserDelete" asp-route-id="@u.Id">Delete</a>
                                <br />
                                <a asp-action="EditUser" asp-route-id="@u.Id">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <a asp-controller="Admin" asp-action="Admin">Back to list</a>

</div>

