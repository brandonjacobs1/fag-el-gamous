<h1>Delete Role</h1>
<h3>Are you sure you want to delete the following role: </h3>
<p>Role: @Model.SingleRole.Name</p>

<form asp-controller="Admin" asp-action="DeleteRole" method="post">
    <input type="hidden" name="roleId" value="@Model.SingleRole.Id" />
    <button type="submit" class="btn btn-primary">Confirm</button>
</form>

<a asp-controller="Admin" asp-action="ManageRoles" class="btn btn-secondary danger">Cancel</a>