@{
    ViewData["Title"] = "Home Page";
}
@{
    ViewData["Title"] = "Egyptian Mummy Excavations";
}

<!-- Hero section -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="hero-title">Unveiling the Secrets of Egyptian Mummies</h1>
                <p class="hero-description">Join us on an exciting journey of discovery as we explore the mysteries of ancient Egyptian mummies. Our team of expert archaeologists and researchers are dedicated to unraveling the secrets of these enigmatic relics of the past.</p>
                <a href="#" class="btn btn-primary">Learn More</a>
            </div>
            <div class="col-md-6">
                <img src="img/mummy.jpg" alt="Egyptian mummy" class="hero-image">
            </div>
        </div>
    </div>
</section>

<!-- Features section -->
<section class="features-section">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="feature">
                    <img src="img/icon1.png" alt="Feature 1" class="feature-icon">
                    <h3 class="feature-title">Ancient Artifacts</h3>
                    <p class="feature-description">Discover rare and unique artifacts from ancient Egyptian tombs, including intricate burial masks, sarcophagi, and more.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature">
                    <img src="img/icon2.png" alt="Feature 2" class="feature-icon">
                    <h3 class="feature-title">Scientific Research</h3>
                    <p class="feature-description">Our team of researchers use cutting-edge scientific techniques to study mummies, shedding new light on their history and culture.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature">
                    <img src="img/icon3.png" alt="Feature 3" class="feature-icon">
                    <h3 class="feature-title">Educational Programs</h3>
                    <p class="feature-description">Learn about the fascinating world of Egyptian mummies through our educational programs, including lectures, workshops, and interactive exhibits.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call-to-action section -->
<section class="cta-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="cta-title">Join Us on Our Excavation Expeditions!</h2>
                <p class="cta-description">Become a part of our team and get a chance to participate in our exciting excavations of ancient Egyptian tombs. Don't miss out on this unique opportunity to explore the mysteries of the past!</p>
                <a href="#" class="btn btn-primary">Sign Up Now</a>
            </div>
        </div>
    </div>
</section>

<!-- Footer section -->
<footer class="footer-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <p class="footer-text">© 2023 Egyptian Mummy Excavations. All rights reserved.</p>
            </div>
        </div>
    </div>
</footer>
            
